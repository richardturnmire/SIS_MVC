@model Exercises.Models.Data.Course
@{
    ViewBag.Title = "DeleteCourse";
}

<h2>DeleteCourse</h2>

<div class="row">
    <div class="col-xs-12">
        <h3>Delete State</h3>
        @Html.ActionLink("Return to List", "Courses", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using ( Html.BeginForm() )
        {
            @Html.HiddenFor(m => m.CourseId)
            <p>Are you sure that you wish to delete the @Html.DisplayFor(m => m.CourseName) course?</p>
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "Courses", "Admin", null, new { @class = "btn btn-sm btn-info" })
        }
    </div>
</div>    